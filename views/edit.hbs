                    <input type="text" class="form-control" name="age" value="{{data.age}}">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Enter Email</label>
                    <input type="text" class="form-control" name="email" value="{{data.email}}">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Enter Password</label>
                    <input type="text" class="form-control" name="pass" value="{{data.pass}}" >
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Enter Mobile</label>
                    <input type="text" class="form-control" name="mobile" value="{{data.mobile}}">
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <input type="submit" class="btn btn-primary" value="update">
                </div>
            </form>
        </div>
