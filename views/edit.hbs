     <div class="card" id="box">
        <div class="card-body">
            <form action="/update/?uid={{data._id}}" method="POST">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Enter Name</label>
                    <input type="text" class="form-control" name="name" value="{{data.name}}">
                </div>
